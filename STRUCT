#include <iostream>
#include <string.h>
#include <cstdio>
#include <stdlib.h>

using namespace std;

struct cambio {

float guita,altura;
char nombre[30];
int edad;

};
void cargar (struct cambio a[2]){
    int x;
    for (x=0;x<2;x++){
cout << "Guita: ";
cin >> a[x].guita;
cout << "Altura: ";
cin >> a[x].altura;
cout << "Nombre:";
cin >> a[x].nombre;
cout << "Edad: ";
cin >> a[x].edad;
}
}
void mostrar (struct cambio a[2]){
    int x;
    for (x=0;x<2;x++){
cout << a[x].guita<<endl;
cout << a[x].altura<<endl;
cout << a[x].nombre<<endl;
cout << a[x].edad<<endl;

}
}


int main (){

struct cambio a[2];
int opcion;
while (true){
cout << "1) Cargar: "<<endl;
cout << "2) Mostrar: "<<endl;
cout << "0) Salir: "<<endl;
cout << "Opcion: "<<endl;
cin >>opcion;
system("cls");
switch (opcion){

case 1:
    cargar (a);
    system ("cls");
    system ("pause");
    break;
case 2:
    mostrar (a);
    system ("cls");
    system ("pause");
    break;
case 0:
    return 0;
    break;
default: 
    if(opcion!=0){
    cout<< "OPCION INCORRECTA,INTENTE DE NUEVO"<< endl;
    system("pause");
    system("cls");
}
 break;   
}

}
